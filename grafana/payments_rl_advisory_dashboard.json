{
  "dashboard": {
    "title": "Payments RL Advisory Metrics (Shadow Pilot)",
    "tags": ["payments", "rl", "advisory", "shadow"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "RL vs Actual Rail Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (rail) (payments_rl_actual_rail_total)",
            "legendFormat": "Actual: {{rail}}"
          },
          {
            "expr": "sum by (rail) (payments_rl_recommended_rail_total)",
            "legendFormat": "RL Recommended: {{rail}}"
          }
        ],
        "description": "Routing efficiency: Actual rail used vs RL recommendation"
      },
      {
        "id": 2,
        "title": "Latency Delta (ms)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "avg(payments_rl_latency_improvement_ms)",
            "legendFormat": "Avg Latency Improvement"
          },
          {
            "expr": "quantile(0.95, payments_rl_latency_improvement_ms)",
            "legendFormat": "p95 Latency Improvement"
          }
        ],
        "description": "NPP performance proof: Latency improvement if RL recommendation was followed"
      },
      {
        "id": 3,
        "title": "Cost Delta (cents)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(payments_rl_cost_delta_cents)",
            "legendFormat": "Total Cost Delta"
          }
        ],
        "description": "Commercial defence: Cost impact of RL recommendations"
      },
      {
        "id": 4,
        "title": "Retry Avoidance Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(payments_rl_retry_avoided_total) / sum(payments_rl_total) * 100",
            "legendFormat": "% Retries Avoided"
          }
        ],
        "description": "Ops pain metric: Percentage of retries that could have been avoided"
      },
      {
        "id": 5,
        "title": "RL Confidence Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, payments_rl_confidence_bucket)",
            "legendFormat": "p50 Confidence"
          },
          {
            "expr": "histogram_quantile(0.75, payments_rl_confidence_bucket)",
            "legendFormat": "p75 Confidence"
          },
          {
            "expr": "histogram_quantile(0.95, payments_rl_confidence_bucket)",
            "legendFormat": "p95 Confidence"
          }
        ],
        "description": "Model maturity: Distribution of RL confidence scores"
      },
      {
        "id": 6,
        "title": "Board Weekly Shadow Summary",
        "type": "table",
        "targets": [
          {
            "expr": "sum(payments_rl_retry_avoided_total) / sum(payments_rl_total) * 100",
            "legendFormat": "Potential Failed Payment Reduction %"
          },
          {
            "expr": "avg(payments_rl_latency_improvement_ms)",
            "legendFormat": "Avg Latency Improvement (ms)"
          },
          {
            "expr": "sum(payments_rl_cost_delta_cents)",
            "legendFormat": "Total Cost Impact (cents)"
          },
          {
            "expr": "sum(payments_rl_advisory_total) / sum(payments_total) * 100",
            "legendFormat": "Advisory Coverage %"
          }
        ],
        "description": "Board-ready summary metrics for weekly reporting"
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    }
  }
}
